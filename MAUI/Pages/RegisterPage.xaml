<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.Pages.RegisterPage"
             BackgroundColor="White">

    <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">
        <Label Text="Nueva Cuenta" 
               FontSize="24" 
               FontAttributes="Bold" 
               TextColor="#007AFF" 
               HorizontalOptions="Center" />

        <Entry Placeholder="Nombre Completo" 
               Style="{StaticResource EntryStyle}" />

        <Entry Placeholder="Contraseña" 
               IsPassword="True" 
               Style="{StaticResource EntryStyle}" />

        <Entry Placeholder="Correo" 
               Keyboard="Email" 
               Style="{StaticResource EntryStyle}" />

        <Entry Placeholder="Telefono" 
               Keyboard="Telephone" 
               Style="{StaticResource EntryStyle}" />

        <Entry Placeholder="Fecha De Nacimiento" 
               Style="{StaticResource EntryStyle}" />

        <Label Text="Al continuar, usted acepta las Condiciones de uso y Políticas de privacidad."
               FontSize="12" 
               TextColor="Gray" 
               HorizontalOptions="Center" 
               HorizontalTextAlignment="Center" 
               Margin="0,10,0,0" />

        <Button Text="Registrarse" 
                Style="{StaticResource ButtonStyle}" 
                Clicked="OnRegisterClicked" />

        <Label Text="conectar con"
               FontSize="14" 
               TextColor="Gray" 
               HorizontalOptions="Center" 
               Margin="0,10,0,0" />

        <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
            <ImageButton Source="google.png" WidthRequest="40" HeightRequest="40" />
            <ImageButton Source="facebook.png" WidthRequest="40" HeightRequest="40" />
            <ImageButton Source="twitter.png" WidthRequest="40" HeightRequest="40" />
        </HorizontalStackLayout>

        <Label Text="No tienes cuenta? Registrarse"
               FontSize="14" 
               TextColor="#007AFF" 
               HorizontalOptions="Center" 
               Margin="0,20,0,0" />
    </VerticalStackLayout>

</ContentPage>